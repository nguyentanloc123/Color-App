    <com.spark.submitbutton.SubmitButton
        android:id="@+id/btntextmau"
        android:layout_width="150dp"
        android:layout_height="114dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:text="Find"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="13sp"
        app:sub_btn_background="#6D65E3"
        app:sub_btn_duration="1000"
        app:sub_btn_line_color="@color/white"
        app:sub_btn_ripple_color="@color/colorAccent"
        app:sub_btn_tick_color="#6D65E3" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edittextmau"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_alignBaseline="@+id/btnSpeak"
        android:layout_alignParentStart="true"
        android:hint="Input color"
        app:met_baseColor="#fff"
        app:met_clearButton="true"
        app:met_errorColor="#FFFF0000"
        app:met_floatingLabel="highlight"
        app:met_iconLeft="@drawable/qqq"
        app:met_maxCharacters="8"
        app:met_minCharacters="0"
        app:met_primaryColor="#fff"
        app:met_floatingLabelPadding="5dp"
        app:met_singleLineEllipsis="true" />


    <Button
        android:id="@+id/btnSpeak"
        android:layout_width="38dp"
        android:layout_height="44dp"
        android:layout_alignParentEnd="true"
