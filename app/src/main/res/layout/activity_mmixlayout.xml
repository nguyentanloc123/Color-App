    android:layout_height="match_parent"
    android:background="#6D65E3"
    tools:context=".Mmixlayout">

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25sp" />


    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgv"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_below="@+id/btntextmau"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/coral"
        app:riv_border_color="#ffffff"
        app:riv_border_width="2dip"
        app:riv_corner_radius="50dp"
        app:riv_corner_radius_bottom_left="20dp"
        app:riv_corner_radius_bottom_right="20dp"
        app:riv_corner_radius_top_left="20dp"
        app:riv_corner_radius_top_right="20dp"
        app:riv_mutate_background="true"
        app:riv_tile_mode="repeat" />

